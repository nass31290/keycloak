<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Keycloak Example</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-direction: column;
            height: 100vh;
        }
		.info-line {
			display: flex;
			justify-content: space-around;
			align-items: center;
			width: 100%;
			padding: 10px 50px;
		}
		.header {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding-top: 10px;
        }
        .ues-container {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 20px; 
			padding: 0; 
            width: 100%;
			height: 50%;
            flex-grow: 1;
        }
        /* .ue-box {
			flex-basis: auto;
            border: 2px solid #000;
            padding: 20px;
            text-align: center;
            flex-basis: 20%;
        } */

		.ue-box {
			display: inline-block; /* Changé de div pour un élément inline-block */
			border: 2px solid #000;
			padding: 20px;
			text-align: center;
			text-decoration: none; /* Supprime le soulignement par défaut des liens */
			color: black; /* Couleur du texte pour le lien */
			background-color: white; /* Fond du bouton */
			margin: 0 10px; /* Espacement entre les boutons */
			cursor: pointer; /* Change le curseur en main lors du survol */
		}

		/* Style supplémentaire pour l'interaction */
		.ue-box:hover {
			background-color: #f2f2f2;
		}


        .footer {
            text-align: right;
            width: 100%;
            padding: 10px 50px;
        }

		.center {
			text-align: center;
		}
    </style>
</head>
<body>
	<div class="info-line">
        <p>Nom: <%= user.name %></p>
        <p>Prénom: <%= user.username %></p>
        <p>Roles: <%= user.roles.join(', ') %></p>
    </div>
    <div class="header center">
        <h1>Les UES disponibles</h1>
    </div>
    <div class="ues-container">
		<% ues.forEach(function(ue) { %>
			<a href="/<%= ue.id %>" class="ue-box">
				<%= ue.id %>
				<%= ue.name %>
			</a>
		<% }); %>
	</div>
	
    
</body>
</html>
